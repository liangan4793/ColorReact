<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="85dp"
        >

        <EditText
            android:id="@+id/register_fragment_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First Name" />

        <EditText
            android:id="@+id/register_fragment_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Name" />

        <EditText
            android:id="@+id/register_fragment_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username" />

        <EditText
            android:id="@+id/register_fragment_email_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Adress" />

        <EditText
            android:id="@+id/register_fragment_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_margin="40dp"
        android:id="@+id/register_fragment_register_button"/>

</LinearLayout>